@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Mebeller.Areas.Admin.ViewModels.Page.EditPageViewModel

@{
    ViewBag.Title = "Edit Page";
}

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <ol class="breadcrumb pull-left">
                    <div class="h2 mt-3">
                        <a class="btn btn-warning float-left" asp-controller="Page" asp-action="Index">Back</a>
                    </div>
                </ol>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item">
                        <a href="/Admin/">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Pages</li>
                    <li class="breadcrumb-item active">Edit Page</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->


<div class="container">
    <div class="row">
        <div class="col">
            <form asp-action="EditPage">
                <div class="form-row mb-4">
                    <div class="col-5">
                        <label class="control-label">Page Title</label>
                        <input class="form-control" id="pagetitle" asp-for="PageTitle">
                        <span asp-validation-for="PageTitle" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="col-7">
                        <label class="control-label">Page Address</label>
                        <div class="input-group mr-sm-2">
                            <input class="form-control text-right ltr" placeholder="example-address" id="pagelink" asp-for="PagePathAddress">
                            <div class="input-group-prepend">
                                @{
                                    var baseAddress =
                                        Url.ActionLink("Index", "Home", new { Area = "" });
                                }
                                <div class="input-group-text text-right ltr">@baseAddress</div>
                            </div>
                            <span asp-validation-for="PagePathAddress" class="text-danger field-validation-valid"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <textarea id="editor" asp-for="PageDescription"></textarea>
                    <span asp-validation-for="PageDescription" class="text-danger field-validation-valid"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-block btn-primary">
                    <input type="hidden" asp-for="PageId"/>
                </div>
                @if (ViewData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3" role="alert">@ViewData["SuccessMessage"]</div>
                }
            </form>
        </div>
    </div>
</div>
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Mebeller.Areas.Admin.ViewModels.Banners.AddBannerViewModel

@{
    ViewData["Title"] = "Add Banner";
}
<!-- default icons used in the plugin are from Bootstrap 5.x icon library (which can be enabled by loading CSS below) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css" crossorigin="anonymous">

<!-- the fileinput plugin styling CSS file -->
<link href="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css"/>

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <div class="h2 mt-3">
                        <a class="btn btn-warning float-left" asp-controller="Media" asp-action="Banners">Back</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item">
                        <a href="/Admin/">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Banners</li>
                    <li class="breadcrumb-item active">Add Banner</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->


<div class="row">
    <div class="col-lg-7 col-md-9 col-sm-12 m-auto">
        <form asp-action="AddBanner" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label" for="BannerTitle">Banner Title</label>
                <input type="text" id="BannerTitle" asp-for="BannerTitle" class="form-control">
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="BannerTitle">Link</label>
                <input class="form-control" id="BannerTitle" asp-for="BannerLink">
                <span class="text-danger field-validation-valid"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label d-block mb-2">Description</label>
                <div class="position-relative">
                    <textarea id="editor" asp-for="BannerDescription" class="form-control" rows="5"></textarea>
                    <span class="text-danger field-validation-valid"></span>
                </div>
            </div>

            <input id="input-id" type="file" class="file" data-preview-file-type="text" asp-for="BannerImage">

            <div class="form-group">
                <label class="control-label">Banner Type:</label>
                <div class="form-check form-check-inline">
                    <input type="radio" id="customRadioInline1" class="form-check-input" value="true" asp-for="IsPrimaryBanner">
                    <label class="form-check-label" for="customRadioInline1">Main</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" id="customRadioInline2" class="form-check-input" value="false" asp-for="IsPrimaryBanner">
                    <label class="form-check-label" for="customRadioInline2">Sub</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-block btn-primary">
            </div>
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">@ViewData["SuccessMessage"]</div>
            }
            else if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger text-left mt-3" role="alert" asp-validation-summary="All"></div>
            }
        </form>
    </div>
</div>

@section Scripts {

    <script>
      // with plugin options
      $("#input-id").fileinput({'showUpload':false, 'previewFileType':'any'});
       </script>


    <!-- the jQuery Library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- the main fileinput plugin script JS file -->
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/js/all.min.js"></script>

    <!-- the jQuery Library -->
    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/plugins/buffer.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/plugins/filetype.min.js" type="text/javascript"></script>

    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/plugins/piexif.min.js" type="text/javascript"></script>

    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/plugins/sortable.min.js" type="text/javascript"></script>

    <!-- the main fileinput plugin script JS file -->
    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/fileinput.min.js"></script>
}
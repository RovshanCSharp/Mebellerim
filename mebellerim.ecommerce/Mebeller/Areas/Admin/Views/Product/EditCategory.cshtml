@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Mebeller.Areas.Admin.ViewModels.Product.AddEditCategoryViewModel

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <ol class="breadcrumb pull-left">
                    <div class="h2 mt-3">
                        <a class="btn btn-warning float-left" asp-controller="Product" asp-action="Index">Back</a>
                    </div>
                </ol>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item">
                        <a href="/Admin/">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Products</li>
                    <li class="breadcrumb-item active">Edit Category</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->


<div class="container">
    <div class="row">
        <div class="col">
            <form asp-action="EditCategory">
                <div class="form-group">
                    <label for="CategoryName" class="control-label">Name</label>
                    <input type="text" id="CategoryName" class="form-control" asp-for="CategoryName">
                    <span asp-validation-for="CategoryName" class="text-danger field-validation-valid"></span>
                </div>
                <div class="form-group">
                    <label for="CategoryDescription" class="control-label">Description</label>
                    <textarea id="CategoryDescription" class="form-control" asp-for="CategoryDescription"></textarea>
                    <span asp-validation-for="CategoryDescription" class="text-danger field-validation-valid"></span>
                </div>
                <div class="form-group">
                    <label for="ParentCategoryId" class="control-label">Main category</label>
                    <select id="ParentCategoryId" class="form-control" asp-items="Model.AllCategories" asp-for="ParentCategoryId">
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Edit</button>
                </div>
                @if (ViewData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3" role="alert">@ViewData["SuccessMessage"]</div>
                }
            </form>
        </div>
    </div>
</div>

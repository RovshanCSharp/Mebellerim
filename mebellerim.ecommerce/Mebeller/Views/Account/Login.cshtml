@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Mebeller.Models.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link rel="stylesheet" href="/css/Login/iofrm-style.css">
<link rel="stylesheet" href="/css/Login/iofrm-theme14.css"/>
<link rel="stylesheet" href="/css/Login/style.css"/>


<div style="display: flex; justify-content: center;">
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <div class="website-logo-inside">
                            <a href="/">
                                <div class="logo">
                                    <img src="/svg/logo-dark.svg" style="width: 100px; height: 100px;" alt="">
                                </div>
                            </a>
                        </div>
                        <h3>Login to your account</h3>
                        <p>Access the most powerful tool in the design and web industry.</p>
                        <div class="page-links">
                            <a href="/Account/Login" class="active">Login</a>
                            <a href="/Register">Register</a>
                        </div>
                        <form asp-action="Login" id="login-form">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" id="email" placeholder="Enter your email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" id="password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-button">
                                <button id="submit" type="submit" class="ibtn">Login</button>
                                <a href="/ForgotPassword" class="open-popup">Forgot password?</a>
                            </div>
                            <input asp-for="ReturnUrl" type="hidden"/>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                        <div class="other-links">
                            @if ((Model.ExternalLogins?.Count ?? 0) != 0)
                            {
                                <span>Or login with</span>
                                <form asp-action="ExternalLogins">
                                    <div>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name">
                                                <i class="@($"fab fa-{provider.Name.ToLower()}")"></i>
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                            else
                            {
                                <span>No service configured</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
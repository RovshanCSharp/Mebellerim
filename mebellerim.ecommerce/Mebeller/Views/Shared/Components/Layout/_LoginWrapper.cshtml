@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Mebeller.Models.ViewModels.Home.IndexViewModel

 @if (User.Identity is {IsAuthenticated: false })
            {
                <div class="login-wrapper">
                    <form asp-controller="Account" asp-action="Login" id="login-form">
                        <div class="form-group">
                            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <a href="/ForgotPassword" class="open-popup">Forgot password?</a>
                            <a asp-controller="Account" asp-action="Register" class="open-popup">Don't have an account?</a>
                        </div>
                        <input asp-for="ReturnUrl" type="hidden"/>
                        <button type="submit" class="btn btn-block btn-main">Submit</button>
                    </form>
                </div>
            }
            else
            {
                <div class="login-wrapper">
                    <ul class="account-options">
                        <li>
                            <a asp-action="ManageAccount" asp-controller="Account">
                                <button class="btn btn-primary btn-block" type="submit">
                                    <i class="fa fa-user-circle"></i>
                                    <span>Manage Account</span>
                                </button>
                            </a>
                        </li>
                        <li>
                            <form id="logoutForm" class="mt-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                                <button class="btn btn-danger btn-block" type="submit">
                                    <i class="fa fa-sign-out mr-2"></i>
                                    <span>Sign Out</span>
                                </button>
                            </form>

                        </li>
                    </ul>
                </div>
            
            }
    <ul>
        <li>
            <a href="#" title="Facebook">
                <i class="fa fa-facebook"></i>
            </a>
        </li>
        <li>
            <a href="#" title="Twitter">
                <i class="fa fa-twitter"></i>
            </a>
        </li>
        <li>
